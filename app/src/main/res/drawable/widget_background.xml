<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 (흰색) -->
    <solid android:color="#FFFFFF" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="16dp" />

    <!-- 테두리 (옅은 회색) -->
    <stroke
        android:width="1dp"
        android:color="#E5E7EB" />

    <!-- 패딩 -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>