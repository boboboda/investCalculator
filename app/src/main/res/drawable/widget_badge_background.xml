<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 (투명한 파란색) -->
    <solid android:color="#1A6366F1" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="8dp" />

    <!-- 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#4D6366F1" />

    <!-- 패딩 -->
    <padding
        android:left="6dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="2dp" />

</shape>