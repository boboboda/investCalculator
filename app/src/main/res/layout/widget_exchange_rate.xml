<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/widget_background"
        android:clickable="false"
        android:focusable="false"
        android:duplicateParentState="false">

        <!-- 헤더 + 새로고침 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingVertical="4dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_icon"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실시간 환율 정보"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/widget_refresh_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="새로고침"
                android:src="@android:drawable/ic_popup_sync"
                android:scaleType="fitCenter"
                android:padding="6dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E7EB"
            android:layout_marginBottom="12dp" />

        <!-- 달러 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USD"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/widget_usd_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,330원"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/widget_usd_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textColor="#10B981" />
        </LinearLayout>

        <!-- 엔화 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="JPY (100엔)"
                android:textSize="14sp"
                android:textColor="#6B7280" />

            <TextView
                android:id="@+id/widget_jpy_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="946.00원"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1F2937"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/widget_jpy_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="11sp"
                android:textColor="#EF4444" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_update_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="업데이트: 10:23"
            android:textSize="11sp"
            android:textColor="#9CA3AF"
            android:gravity="end"
            android:paddingTop="8dp" />

        <!-- 총 수익 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:background="#F9FAFB"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="총 예상 수익"
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/widget_total_profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+₩1,234,567"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#10B981" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>